
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to the 'foods' and 'customMeals' collections 
    // for any user that is authenticated.
    match /(foods|customMeals)/{documentId} {
      allow read, write: if request.auth != null;
    }
  }
}
